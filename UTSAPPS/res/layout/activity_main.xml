<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.aditya.utsapps.MainActivity" >

    <android.support.v7.widget.Toolbar
       	xmlns:android="http://schemas.android.com/apk/res/android"
       	xmlns:tools="http://schemas.android.com/tools"
       	xmlns:app="http://schemas.android.com/apk/res-auto"
       	android:id="@+id/apptoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    	<TextView
	        android:id="@+id/txtTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="15dp"
	        android:text="@string/txtTitle"
	        android:textColor="#ffffff"
	        android:textSize="18dp"
	        android:gravity="center_horizontal"
	        android:textAlignment="center"
	        android:textStyle="bold" />

    	<ScrollView
		    android:id="@+id/ScrollView1"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="56dp" >

    	    <android.support.v7.widget.CardView
	    	    android:id="@+id/card_view"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:layout_below="@+id/apptoolbar"
	    	    android:layout_centerHorizontal="true"
	    	    android:padding="8dp"
	    	    android:elevation="3dp" >

	    	    <Spinner
	    	        android:id="@+id/spinSeminar"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="30dp"
	    	        android:layout_alignParentLeft="true"
	    	        android:layout_below="@+id/toolbar"
	    	        android:layout_marginLeft="23dp"
	    	        android:layout_marginRight="20dp"
	    	        android:layout_marginTop="20dp"
	    	        android:entries="@array/jn_seminar" />

	    	    <EditText
	    	        android:id="@+id/edtNama"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="65dp"
	    	        android:ems="10"
	    	        android:hint="Nama Lengkap"
	    	        android:inputType="textPersonName" >
	    	    </EditText>

	    	    <EditText
	    	        android:id="@+id/edtAlamat"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="120dp"
	    	        android:ems="10"
	    	        android:hint="Alamat"
	    	        android:inputType="text" />

	    	    <Spinner
	    	        android:id="@+id/spinSex"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="30dp"
	    	        android:layout_alignParentLeft="true"
	    	        android:layout_below="@+id/toolbar"
	    	        android:layout_marginLeft="23dp"
	    	        android:layout_marginRight="20dp"
	    	        android:layout_marginTop="185dp"
	    	        android:entries="@array/jn_sex" />

	    	    <EditText
	    	        android:id="@+id/edtKTP"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="230dp"
	    	        android:ems="10"
	    	        android:hint="No.ID KTP"
	    	        android:inputType="text" />

	    	    <EditText
	    	        android:id="@+id/edtEmail"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="290dp"
	    	        android:ems="10"
	    	        android:hint="Email"
	    	        android:inputType="text" />

	    	    <EditText
	    	        android:id="@+id/edtHP"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="350dp"
	    	        android:ems="10"
	    	        android:hint="No.Telepon/HP"
	    	        android:inputType="text" />

	    	    <!-- <EditText
	    	        android:id="@+id/edtTanggalLahir"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="410dp"
	    	        android:ems="10"
	    	        android:hint="Tanggal Lahir"
	    	        android:inputType="text" /> -->
	    	        
	    	    <Button
			        android:id="@+id/btn_DatePicker"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/edtHP"
			        android:layout_centerHorizontal="true"
			        android:padding="5dp"
			        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
			        android:layout_marginTop="410dp"
			        android:layout_marginBottom="10dp"
			        android:text="Pilih Tanggal Lahir" />
	    	        
	    	    <!-- <DatePicker
	                android:id="@+id/datePicker"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="410dp" /> -->

	    	    <EditText
	    	        android:id="@+id/edtTempatLahir"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="wrap_content"
	    	        android:layout_alignParentTop="true"
	    	        android:layout_centerHorizontal="true"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
	    	        android:layout_marginTop="470dp"
	    	        android:ems="10"
	    	        android:hint="Tempat Lahir"
	    	        android:inputType="text" />

	    	    <Spinner
	    	        android:id="@+id/spinSize"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="30dp"
	    	        android:layout_alignParentLeft="true"
	    	        android:layout_below="@+id/edtTempatLahir"
	    	        android:layout_marginLeft="23dp"
	    	        android:layout_marginRight="20dp"
	    	        android:layout_marginTop="540dp"
	    	        android:entries="@array/jn_size" />

	    	    <Button
			        android:id="@+id/btn_register"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/spinSize"
			        android:layout_centerHorizontal="true"
			        android:padding="5dp"
			        android:layout_marginLeft="25dp"
	    	        android:layout_marginRight="30dp"
			        android:layout_marginTop="590dp"
			        android:layout_marginBottom="10dp"
			        android:text="Daftar On-Line" />

    		</android.support.v7.widget.CardView>

	    </ScrollView>

</RelativeLayout>
